{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "lib": ["ES6", "ES2017", "ES2018", "ES2019", "ES2020"],
        "noImplicitAny": true,
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "rootDir": "./src/",
        "outDir": "./dist/"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
